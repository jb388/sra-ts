  author = {Barré, Pierre and Quénéa, Katell and Vidal, Alix and Cécillon, Lauric and Christensen, Bent T. and Kätterer, Thomas and Macdonald, Andy and Petit, Léo and Plante, Alain F. and van Oort, Folkert and Chenu, Claire},
