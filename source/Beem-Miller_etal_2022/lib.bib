@article{mcbride2022,
  title = {Estimating Soil Chemical Properties by Diffuse Reflectance Spectroscopy: {{Promise}} versus Reality},
  author = {McBride, Murray B.},
  date = {2022},
  journaltitle = {European Journal of Soil Science},
  volume = {73},
