@article{lutzow2006,
  title = {Stabilization of Organic Matter in Temperate Soils: {{Mechanisms}} and Their Relevance under Different Soil Conditions - {{A}} Review},
  author = {Lützow, M. V. and Kögel-Knabner, I. and Ekschmitt, K. and Matzner, E. and Guggenberger, G. and Marschner, B. and Flessa, H.},
