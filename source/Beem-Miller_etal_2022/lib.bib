@article{kaiser2015,
  title = {How Air-Drying and Rewetting Modify Soil Organic Matter Characteristics : {{An}} Assessment to Improve Data Interpretation and Inference},
  author = {Kaiser, Michael and Kleber, Markus and Asefaw, Asmeret},
