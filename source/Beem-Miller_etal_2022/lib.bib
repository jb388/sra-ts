@article{salome2010,
  title = {Carbon Dynamics in Topsoil and in Subsoil May Be Controlled by Different Regulatory Mechanisms},
  author = {Salomé, Clémence and Nunan, Naoise and Pouteau, Valérie and Lerch, Thomas Z. and Chenu, Claire},
