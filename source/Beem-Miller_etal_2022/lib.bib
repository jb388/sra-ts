}

@article{koele2009,
  title = {Interactions between Mycorrhizal Fungi and Mycorrhizosphere Bacteria during Mineral Weathering: {{Budget}} Analysis and Bacterial Quantification},
  author = {Koele, Nina and Turpault, Marie Pierre and Hildebrand, Ernst E. and Uroz, Stéphane and Frey-Klett, Pascale},
  date = {2009},
  journaltitle = {Soil Biology and Biochemistry},
  volume = {41},
