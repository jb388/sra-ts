@article{balesdent2018,
  title = {Atmosphere–Soil Carbon Transfer as a Function of Soil Depth},
  author = {Balesdent, Jérôme and Basile-Doelsch, Isabelle and Chadoeuf, Joël and Cornu, Sophie and Derrien, Delphine and Fekiacova, Zuzana and Hatté, Christine},
